<MyGrid>
    GridLayout:
        cols:1
        size: root.width - 200, root.height - 200
        # changes width and height to less than the width/height of widget
        pos: 100, 100
        # adds padding of 100 to width and height


        GridLayout:
            cols:2

            Label:
                text: "Name: "

            TextInput:
                multiline: False

            Label:
